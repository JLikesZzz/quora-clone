<section>
	<h2><b>Top Stories For You</b></h2>
	<hr>
	<% @list_question.each do |x| %>
		<% question_id = "/questions/#{x.id}" %>
		<% user_who_answer = User.find(x.user_id) %>
		<h1><a class="two" target="_blank" href=<%= question_id %> ><%=x.question_title%></a></h1>
		<p><%=x.question_desc%></p>
		<%username_profile_link = "/profile/#{user_who_answer.id}"%>
		<p>Question by: <a class="two" href=<%= username_profile_link%>><%=user_who_answer.username%></a>
		<hr>
	<% end %>
</section>
